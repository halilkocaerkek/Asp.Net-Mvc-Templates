@model DataModel.school

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Details</strong>
            </li>
        </ol>
        <div class="ibox-tools">

            @*<i class="fa fa-wrench"></i>*@
            @Html.ActionLink(" ", "Index", "schools", new { id = 1 }, new { @class = "fa fa-arrow-circle-left fa-2x" })

        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@Html.DisplayFor(model => model.name)</h5>
                    <div class="ibox-tools">

                        @*<i class="fa fa-wrench"></i>*@
                        @Html.ActionLink(" ", "Edit", new { id = Model.id }, new { @class = "fa fa-wrench" })

                    </div>
                </div>
                <div class="ibox-content">

                    <div class="row">

                        <a href='@Url.Action("Index", "students", new { id = 1 })'>
                            <div class="col-lg-3">
                                <div class="widget style1 navy-bg">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <i class="fa fa-users fa-5x"></i>
                                        </div>
                                        <div class="col-xs-8 text-right">
                                            <span> Students </span>
                                            <h2 class="font-bold">79</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <a href='@Url.Action("Index", "teachers", new { id = 1 })'>
                            <div class="col-lg-3">
                                <div class="widget style1 yellow-bg">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <i class="fa fa-user fa-5x"></i>
                                        </div>
                                        <div class="col-xs-8 text-right">
                                            <span> Teachers </span>
                                            <h2 class="font-bold">4</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <a href='@Url.Action("Index", "sinifs", new { id = 1 })'>
                            <div class="col-lg-3">
                                <div class="widget style1 lazur-bg">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <i class="fa fa-home fa-5x"></i>
                                        </div>
                                        <div class="col-xs-8 text-right">
                                            <span> Classes </span>
                                            <h2 class="font-bold">6</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <a href='@Url.Action("schedule", "schools", new { id = 1 })'>
                            <div class="col-lg-3">
                                <div class="widget style1 navy-bg">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <i class="fa fa-calendar   fa-5x"></i>
                                        </div>
                                        <div class="col-xs-8 text-right">
                                            <span> Schedule </span>
                                            <h2 class="font-bold"> </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>

                        <a href='@Url.Action("Index", "payments", new { id = 1 })'>
                            <div class="col-lg-3">
                                <div class="widget style1 navy-bg">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <i class="fa fa-money fa-5x"></i>
                                        </div>
                                        <div class="col-xs-8 text-right">
                                            <span> Payments </span>
                                            <h2 class="font-bold"> </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>